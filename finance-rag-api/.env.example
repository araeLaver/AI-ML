# ==========================================================================
# Finance RAG API - Environment Configuration
# ==========================================================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# ==========================================================================
# API Keys (Optional - for future cloud LLM support)
# ==========================================================================
# OpenAI: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# ==========================================================================
# LLM Settings (Ollama)
# ==========================================================================
# Ollama API endpoint
OLLAMA_API_URL=http://localhost:11434

# Model to use (must be pulled first: ollama pull llama3.2:latest)
LLM_MODEL=llama3.2:latest

# Generation parameters
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1024

# ==========================================================================
# Vector Database (ChromaDB)
# ==========================================================================
# Path to store vector database
CHROMA_DB_PATH=./db

# Collection name for documents
CHROMA_COLLECTION_NAME=finance_docs

# ==========================================================================
# RAG Settings
# ==========================================================================
# Number of documents to retrieve
TOP_K=5

# Minimum relevance score (0.0 - 1.0)
RELEVANCE_THRESHOLD=0.3

# ==========================================================================
# Application Settings
# ==========================================================================
# Environment: development, staging, production
APP_ENV=development

# Debug mode
DEBUG=true

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ==========================================================================
# API Server
# ==========================================================================
API_HOST=0.0.0.0
API_PORT=8000
